<body>
    <!--bootstrap basket page-->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Panier</h1>
            </div>
        </div>
        <div class="row orange-button">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Total</th>
                            <th>Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i=0; i < basket.length-1; i=i+8) { %>
                            <tr>
                                <td>
                                    <%=basket[i+2] + " " + basket[i+7] %>
                                </td>
                                <td>
                                    <%=basket[i+6] /basket[i+5] %>€
                                </td>
                                <td>
                                    <%=basket[i+5] %>
                                </td>
                                <td>
                                    <%=basket[i+6] %>€
                                </td>
                                <td><button type="button" class="btn btn-danger">Supprimer</button></td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
                <!-- command button-->
                <div class="row">
                    <div class="col-md-12">
                        <a href="/order" class="btn btn-primary">Commander</a>
                    </div>
                </div>
            </div>
        </div>
</body>
<script>
    let basketNUM = document.querySelector('#basketNUM');
    console.log(getCookie("qtebasket"));
